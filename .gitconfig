[alias]
	dc = diff --cached
	di = diff
	st = status
	br = branch
	ba = branch -a
	co = checkout
	ci = commit
	ca = commit -a
	lg = log --date=local
	lgn = log --date=local --name-only
	amend = commit --amend
	unstage = reset HEAD
	glog = log --graph --pretty=format:\"%Cred%h%Creset â€” %s %Cblue%an%Creset %Cgreen(%cr)%Creset\"
        active = for-each-ref --sort=-committerdate refs/
	switch = !legit switch \"$@\"
	branches = !legit branches
	sprout = !legit sprout \"$@\"
	unpublish = !legit unpublish \"$@\"
	harvest = !legit harvest \"$@\"
	sync = !legit sync \"$@\"
	publish = !legit publish \"$@\"
	graft = !legit graft \"$@\"
[merge]
	tool = vimdiff
[push]
	default = current
[credential]
	helper = osxkeychain
[pull]
	default = current
