#! /bin/bash

HOST=$1
if [ -z $HOST ]; then
  exit 1
fi

CMD="cd /var/www/apps/supporter"
CMD="$CMD && . ./shared/config/environment"
CMD="$CMD && cd current"
CMD="$CMD && cat config/database.yml"
CMD="$CMD && RAILS_ENV=production bin/rails dbconsole"

echo "Opening DB console for supporter on host $HOST"

ssh $HOST -t "$CMD"
